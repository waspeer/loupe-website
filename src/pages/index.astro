---
import Layout from '../components/layout-base.astro';
import { FaFacebook, FaInstagram } from 'react-icons/fa';
import { renderToString } from 'react-dom/server';

const socials = [
  {
    name: 'Facebook',
    href: 'https://www.facebook.com/thisisloupe',
    Icon: FaFacebook,
  },
  {
    name: 'Instagram',
    href: 'https://www.instagram.com/thisisloupe/',
    Icon: FaInstagram,
  },
]
---

<head>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "MusicGroup",
    "name": "Loupe",
    "image": [
      "https://thisisloupe.com/loupe.jpg"
    ]
  }
  </script>
</head>

<Layout>
  <main>
    <header>
      <h1>
        <img 
          src="https://res.cloudinary.com/wannessalome/image/upload/f_auto/v1636058831/loupe/logo.jpg" 
          width="776" 
          height="590"
          alt="Loupe"
        />
        <span class="visually-hidden">Loupe</span>
      </h1>
    </header>

    <nav class="socials" aria-label="Socials">
      <ul>
        {socials.map(({ name, href, Icon }) => (
          <li>
            <a href={href} title={name}>
              {renderToString(Icon({ 'aria-hidden': 'true' }))}
              <span class="visually-hidden">{name}</span>
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <section class="shows">
      <article />
      <article />
      <article />
    </section>

    <footer>
      <strong>General inquiries:</strong>
      <a href="mailto:info@thisisloupe.com">info@thisisloupe.com</a>

      <strong>Management:</strong>
      <a href="mailto:joris@attacknrelease.com">joris@attacknrelease.com</a>
      <a href="mailto:martijn@attacknrelease.com">martijn@attacknrelease.com</a>
    </footer>
  </main>
</Layout>

<style lang="scss">
  main {
    display: flex;
    width: 40vw;
    width: clamp(30ch, 40vw, 50ch);
    min-height: 100vh;
    flex-direction: column;
    justify-content: center;
    gap: 2rem;
    margin-inline: auto;
    padding-inline: 1.5rem;
  }

  header {
    img {
      width: 100%;
      height: auto;
    }
  }

  .socials {
    ul {
      display: flex;
      justify-content: space-around;
      padding: 0;
      margin: 0;
      font-size: 2rem;
      list-style: none;
    }
  
    a {
      display: grid;
      border-radius: 50%;
      place-content: center;
    }
  }

  .shows {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    article {
      height: 3rem;
      background-color: #252525;
    }
  }

  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;

    strong {
      margin-top: 1rem;
      margin-bottom: -0.5rem;
    }

    a {
      border-radius: 0.125rem;
    }
  }

</style>